	@FXML TextField usernameTextField;
//	@FXML Button joinButton;
	
	public static String username;
	public static ArrayList<User> users = new ArrayList<User>();
	
	public void changeWindow() {
        try {
            Stage stage = (Stage) usernameTextField.getScene().getWindow();
            Parent root = FXMLLoader.load(this.getClass().getResource("/view/MainWindowView.fxml"));
            stage.setScene(new Scene(root, 330, 560));
            stage.setTitle(username + "");
            stage.setOnCloseRequest(event -> {
                System.exit(0);
            });
            stage.setResizable(false);
            stage.show();
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
	
	@FXML
	public void handleJoinButton(ActionEvent e) {
		User newUser = new User();
		username = usernameTextField.getText();
		newUser.name = usernameTextField.getText();
		users.add(newUser);
		changeWindow();
	}
}
